{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@characters/characters": [
        "libs/characters/src"
      ],
      "@characters/characters/*": [
        "libs/characters/src/*"
      ],
      "@chapters/chapters": [
        "libs/chapters/src"
      ],
      "@chapters/chapters/*": [
        "libs/chapters/src/*"
      ]
    }
  }
}